<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryDark">@color/deep_blue</item>
        <item name="colorAccent">@color/material_deep_teal_200</item>
    </style>

    <style name="LogoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--利用style双标签来设置风格，在这里，style即就是对应的内部类-->
    <style name="text_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff060606</item>
    </style>

    <style name="theme_full_screen" parent="Theme.AppCompat.NoActionBar">
        <!--全屏主题-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="text_indicator" >
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#ffc3c4c4</item>

    </style>

    <style name="text_menu" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="text_title" >
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="list_head" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
